#!/command/with-contenv bash

BACKUP_CONCURRENCY=${BACKUP_CONCURRENCY:-"2"}
CONFIG_FILE=${CONFIG_FILE:-"restic.conf"}
CONFIG_PATH=${CONFIG_PATH:-"/config/"}
DEFAULT_BACKUP_ENABLE_HOOKS=${DEFAULT_BACKUP_ENABLE_HOOKS:-"TRUE"}
HOOKS_PATH=${HOOKS_PATH:-"${CONFIG_PATH}/hooks/"}
HOOKS_POST_PATH=${HOOKS_POST_PATH:-"${HOOKS_PATH}"/post/}
HOOKS_PRE_PATH=${HOOKS_PRE_PATH:-"${HOOKS_PATH}"/pre/}
LOG_FILE=${LOG_FILE:-"restic.log"}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TYPE=${LOG_TYPE:-"FILE"}
REPOSITORY_PATH=${REPOSITORY_PATH:-"/repository/"}
SETUP_MODE=${SETUP_MODE:-"AUTO"}
DEFAULT_BACKUP_ENABLE_CLEANUP=${DEFAULT_BACKUP_ENABLE_CLEANUP:-"TRUE"}
DEFAULT_BACKUP_VERBOSE_LEVEL=${DEFAULT_BACKUP_VERBOSE_LEVEL:-"2"}
DEFAULT_BACKUP_CLEANUP_RETAIN_HOURLY=${DEFAULT_BACKUP_CLEANUP_RETAIN_HOURLY:-"24"}
DEFAULT_BACKUP_CLEANUP_RETAIN_DAILY=${DEFAULT_BACKUP_CLEANUP_RETAIN_DAILY:-"7"}
DEFAULT_BACKUP_CLEANUP_RETAIN_WEEKLY=${DEFAULT_BACKUP_CLEANUP_RETAIN_WEEKLY:-"5"}
DEFAULT_BACKUP_CLEANUP_RETAIN_MONTHLY=${DEFAULT_BACKUP_CLEANUP_RETAIN_MONTHLY:-"24"}
DEFAULT_BACKUP_CLEANUP_RETAIN_YEARLY=${DEFAULT_BACKUP_CLEANUP_RETAIN_YEARLY:-"99"}
