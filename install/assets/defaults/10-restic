#!/command/with-contenv bash

PROCESS_CONCURRENCY=${PROCESS_CONCURRENCY:-"2"}
CONFIG_FILE=${CONFIG_FILE:-"restic.conf"}
CONFIG_PATH=${CONFIG_PATH:-"/config/"}
DEFAULT_BACKUP_ENABLE_CLEANUP=${DEFAULT_BACKUP_ENABLE_CLEANUP:-"TRUE"}
DEFAULT_BACKUP_ENABLE_HOOKS=${DEFAULT_BACKUP_ENABLE_HOOKS:-"TRUE"}
DEFAULT_BACKUP_CLEANUP_VERBOSITY_LEVEL=${DEFAULT_BACKUP_CLEANUP_VERBOSITY_LEVEL:-"2"}
DEFAULT_BACKUP_VERBOSITY_LEVEL=${DEFAULT_BACKUP_VERBOSITY_LEVEL:-"2"}
DEFAULT_CHECK_VERBOSITY_LEVEL=${DEFAULT_CHECK_VERBOSITY_LEVEL:-"2"}
DEFAULT_PRUNE_VERBOSITY_LEVEL=${DEFAULT_PRUNE_VERBOSITY_LEVEL:-"2"}
DEFAULT_UNLOCK_VERBOSITY_LEVEL=${DEFAULT_UNLOCK_VERBOSITY_LEVEL:-"2"}
HOOKS_PATH=${HOOKS_PATH:-"${CONFIG_PATH}/hooks/"}
HOOKS_POST_PATH=${HOOKS_POST_PATH:-"${HOOKS_PATH}"/post/}
HOOKS_PRE_PATH=${HOOKS_PRE_PATH:-"${HOOKS_PATH}"/pre/}
LOG_PATH=${LOG_PATH:-"/logs/"}
LOG_TYPE=${LOG_TYPE:-"FILE"}
REPOSITORY_PATH=${REPOSITORY_PATH:-"/repository/"}
SERVER_ENABLE_AUTHENTICATION=${SERVER_ENABLE_AUTHENTICATION:-"TRUE"}
SERVER_ENABLE_METRICS=${SERVER_ENABLE_METRICS:-"TRUE"}
SERVER_LISTEN_IP=${SERVER_LISTEN_IP:-"0.0.0.0"}
SERVER_LISTEN_PORT=${SERVER_LISTEN_PORT:-"8000"}
SERVER_LOG_LEVEL=${SERVER_LOG_LEVEL:-"INFO"}
SERVER_RCLONE_CONFIG_FILE=${SERVER_RCLONE_CONFIG_FILE:-"server_rclone.conf"}
SERVER_RCLONE_CONFIG_PATH=${SERVER_RCLONE_CONFIG_PATH:-"${CONFIG_PATH}"}
SERVER_LOG_FILE=${SERVER_LOG_FILE:-"server.log"}
SERVER_LOG_PATH=${SERVER_LOG_PATH:-"${LOG_PATH}"}
SERVER_MODE=${SERVER_MODE:-"restic"}
SERVER_PASSWORD_FILE=${SERVER_PASSWORD_FILE:-"${CONFIG_PATH}/server_password.cfg"}
SERVER_REPOSITORY_PATH=${SERVER_REPOSITORY_PATH:-"/repository/"}
SERVER_REPOSITORY_PASS=${SERVER_REPOSITORY_PASS:-"${REPOSITORY_PASS}"}
SETUP_MODE=${SETUP_MODE:-"AUTO"}